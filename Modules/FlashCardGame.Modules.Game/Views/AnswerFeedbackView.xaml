<UserControl x:Class="FlashCardGame.Modules.Game.Views.AnswerFeedbackView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <materialDesign:Card VerticalAlignment="Center" HorizontalAlignment="Center"  Width="400" Height="100" materialDesign:ShadowAssist.ShadowDepth="Depth5" Padding="32" Margin="16">

        <StackPanel Orientation="Horizontal">
            <materialDesign:PackIcon Kind="Tick" Height="64" Width="64" />
            <materialDesign:PackIcon Kind="QuestionMarkCircle" Height="64" Width="64" />
            <Label Content="{Binding Feedback}" />
        </StackPanel>
    </materialDesign:Card>
</UserControl>